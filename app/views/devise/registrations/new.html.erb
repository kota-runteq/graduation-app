<div class="container py-5 d-flex justify-content-center">
  <div class="text-center">
    <h2><%= t("devise.registrations.new.title") %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ユーザー名", class: "form-label" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions"><br>
        <%= f.submit t("devise.registrations.new.sign_up_button") %>
      </div>
    <% end %><br>

    <%= render "devise/shared/links" %>
  </div>
</div>
